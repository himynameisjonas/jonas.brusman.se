---
layout: layout.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
  - blogPosts
  - all
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "{{tag}}"
  description: Posts tagged with {{ tag }}
eleventyExcludeFromCollections: true
---

{% assign tagged_posts = collections[tag] %}
{% assign tagged_notes = tagged_posts | where: "data.blogPostType", "note" %}
{% assign tagged_photos = tagged_posts | where: "data.blogPostType", "photo" %}

{% if tagged_notes.size > 0 %}
  <div class="w-content">
    <h2 class="text-3xl leading-tight font-semibold border-l-4 border-branding -ml-5 pl-4 mb-3">Notes tagged with <span class="prefix-hash">{{ tag }}</span></h2>
    {% for post in tagged_notes reversed %}
      {% unless post.data.photos %}
        {% include "list_note_post" %}
      {% endunless %}
    {% endfor %}
  </div>
{% endif %}

{% if tagged_photos.size > 0 %}
  <div class="w-content">
    <h2 class="text-3xl leading-tight font-semibold border-l-4 border-branding -ml-5 pl-4 mb-3">Photos tagged with <span class="prefix-hash">{{ tag }}</span></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {% for post in tagged_photos reversed %}
        {% include "list_photo_post" %}
      {% endfor %}
    </div>
  </div>
{% endif %}
