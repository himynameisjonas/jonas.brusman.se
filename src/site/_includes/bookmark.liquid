---
layout: layout.njk
---

<article class="flex flex-col h-entry">
  <a href="{{ link }}" class="w-content" rel="noopener">
    <h1 class="md:text-5xl md:leading-relaxed leading-relaxed text-3xl text-white font-semibold p-name text-balance">
      <span class="title-bg">
        {{ headline | default: title }}
      </span>
    </h1>
  </a>
  <a href={{link}} class="link text-gray-500 italic w-content mb-4" rel="noopener">{{prettyUrl}}</a>

  <div class="markdown w-content e-content">
    {{content}}
  </div>

  {% if excerpt.length > 1 %}
    <blockquote class="mb-4 italic w-content e-content text-gray-500"><span class="pr-0.5 text-xl">“</span>{{excerpt}}<span class="pl-0.5 text-xl">”</span></blockquote>
  {% endif %}

  <div class="border-t-4 border-branding w-content mb-2 mt-2 pt-2 text-gray-700 dark:text-neutral-500">
    <dl>
      {% if date %}
        <dt class="">Published at</dt>
        <dd class="mb-1 font-light">
          <time class="dt-published" datetime="{{date | date: "%Y-%m-%d" }}">
            <a href="{{page.url}}" class="u-url">{{date | date: "%Y-%m-%d"}}</a>
          </time>
        </dd>
      {% endif %}

      {% if linkTags.length > 1 %}
        <dt class="">Tags</dt>
        <dd class="mb-1 font-light">
          {% for tag in linkTags %}
            {% unless tag == "blogPost" %}
              <span class="prefix-hash">{{tag}}</span>
            {% endunless %}
          {% endfor %}
        </dd>
      {% endif %}

      {% if syndications.length > 0 %}
        <dt class="hidden">This post elsewhere</dt>
        <dd class="hidden mb-1 font-light">
          {% for url in syndications %}<a href="{{ url }}" rel="syndication" class="u-syndication link">{{url}}</a> {% endfor %}
        </dd>
      {% endif %}
    </dl>
    <a rel="author" class="hidden p-author h-card" href="https://jonas.brusman.se">Jonas Brusman</a>
  </div>
</article>
