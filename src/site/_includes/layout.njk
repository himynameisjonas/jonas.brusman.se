<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}
      {% if title %}
        |
      {% endif %}Jonas Brusman</title>
    <link rel="alternate" type="application/atom+xml" title="Jonas Brusman's blog" href="https://jonas.brusman.se/rss.xml"/>
    <link
      rel="alternate"
      type="application/atom+xml"
      title="Jonas Brusman's bookmarks"
      href="https://jonas.brusman.se/bookmarks/rss.xml"/>
    <link rel="stylesheet" href="/css/styles.css">
    {% set page_excerpt %}{% excerpt description, content, title %}{% endset %} <meta name="description" content="{{ page_excerpt | truncate(200) }}">
    {% if photos.length > 0 -%}
      {%- set photo = photos[0] -%} <meta property="og:image" content="{% image_url photo, true %}"/>
    {% else %}
      <meta property="og:image" content="/og.png"/>
    {% endif -%}
    <meta property="og:image:width" content="1200"/>
    <meta property="og:image:height" content="630"/>
    <link rel="webmention" href="https://webmention.io/jonas.brusman.se/webmention"/>
    <link rel="pingback" href="https://webmention.io/jonas.brusman.se/xmlrpc"/>
    <link href="https://twitter.com/himynameisjonas" rel="me">
    <link href="https://github.com/himynameisjonas" rel="me">
    <link href="https://tacocat.space/@jonas" rel="me">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  </head>
  <body class="flex flex-col p-4 pb-8 bg-gradient-salmon text-gray-700 min-h-screen">
    <header class="flex mb-10 md:mt-6 flex-wrap gap-x-6 gap-y-3 w-content justify-center md:justify-start">
      <a
        href="/"
        rel="author"
        class=" text-purple_heart hover:text-salmon uppercase hover:animate-pulse block font-semibold leading-tight md:text-left
          p-name text-2xl font-tropic">
        Jonas Brusman
      </a>
      <nav class="flex flex-wrap items-baseline gap-x-6 md:gap-x-3 gap-y-4 text-xl justify-center font-normal">
        <a href="/" class="{% if page.url == "/" %}text-purple_heart border-purple_heart {% else %}border-transparent text-gray-700{% endif %} hover:border-salmon border-b-4 pb-1 hover:text-purple_heart">Home</a>
        <a href="/photos/" class="{% if page.url == "/photos/" or blogPostType == "photo" %}text-purple_heart border-purple_heart {% else %}border-transparent text-gray-700{% endif %} hover:border-salmon border-b-4 pb-1 hover:text-purple_heart">Photos</a>
        <a href="/texts/" class="{% if page.url == "/texts/" or blogPostType == "text" %}text-purple_heart border-purple_heart {% else %}border-transparent text-gray-700{% endif %} hover:border-salmon border-b-4 pb-1 hover:text-purple_heart">
          Texts
        </a>
        {% set bookmarksRegex = r/\/bookmarks\//g %}
        <a href="/bookmarks/" class="{% if bookmarksRegex.test(page.url) %}text-purple_heart border-purple_heart {% else %}border-transparent text-gray-700{% endif %} hover:border-salmon border-b-4 pb-1 hover:text-purple_heart">
          Bookmarks
        </a>
        <a href="/about/" class="{% if page.url == "/about/" %}text-purple_heart border-purple_heart {% else %}border-transparent text-gray-700{% endif %} hover:border-salmon border-b-4 pb-1 hover:text-purple_heart">About</a>
      </nav>
    </header>
    <div class="flex flex-col">
      {{ content | safe }}
    </div>
    {% tracking_script -%}
    <script src="/js/instantpage-5.2.0.js" type="module" defer></script>
  </body>
</html>
