<div class="mb-9 w-full flex-initial text-gray-700">
  <a href="{{ post.url }}" class="">
    <h2 class="list-title">
      {{ post.data.title }}
    </h2>
  </a>
  <div class="font-normal text-gray-500">
    <a href="{{ post.url }}">
      <time datetime="{{ post.date | date: "%Y-%m-%d" }}" class="text-gray-500 hover:text-salmon-400">
        {{ post.date | date: '%Y-%m-%d' }}
      </time>
    </a>
    â€¢
    {% for tag in post.data.tags %}
      {% unless tag == 'blogPost' %}
        <a href="/tags/{{tag}}/" class="prefix-hash hover:text-salmon-400">{{ tag }}</a>
      {% endunless %}
    {% endfor %}
  </div>
</div>
