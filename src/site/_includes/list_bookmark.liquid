<div class="mb-9 w-full flex-initial">
  <a href="{{ bookmark.link }}" class="" rel="noopener">
    <h2 class="list-title">
      {{ bookmark.title }}
    </h2>
    <span class="block link text-gray-500 italic dark:text-neutral-400">{{ bookmark.prettyUrl }}</span>
  </a>
  {% if bookmark.content.length > 0 %}
    <div class="my-1">{{ bookmark.content }}</div>
  {% endif %}
  {% if bookmark.excerpt.length > 1 %}
    <blockquote class="my-2 border-l-4 border-salmon-500 pr-4 pl-4 text-gray-600 dark:border-salmon-600 dark:text-neutral-400">
      {{ bookmark.excerpt -}}
    </blockquote>
  {% endif %}
  <div class="font-normal text-gray-500 dark:text-neutral-400">
    <a href="{{ bookmark.permalink }}">
      <time
        datetime="{{ bookmark.date | date: "%Y-%m-%d" }}"
        class="text-gray-500 hover:text-salmon-500 dark:text-neutral-400 dark:hover:text-salmon-600"
      >
        {{ bookmark.date | date: '%Y-%m-%d' }}
      </time>
    </a>
    {% if bookmark.tags.length > 0 %}â€¢{% endif %}
    {% for tag in bookmark.tags %}
      {% unless tag == 'blogPost' %}
        <span class="prefix-hash">{{ tag }}</span>
      {% endunless %}
    {% endfor %}
  </div>
</div>
