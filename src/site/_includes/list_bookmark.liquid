<div class="flex-initial mb-9 w-full text-gray-700">
  <a href="{{ bookmark.link }}" class="" rel="noopener">
    <h2 class="text-2xl leading-relaxed mb-1 hover:scale-105 transition-transform ease-out inline-block">
      <span class="title-bg">{{ bookmark.title }}</span>
    </h2>
    <span class="text-gray-500 italic link block">{{ bookmark.prettyUrl }}</span>
  </a>
  {% if bookmark.content.length > 0 %}
    <div class="my-1">{{ bookmark.content }}</div>
  {% endif %}
  {% if bookmark.excerpt.length > 1 %}
    <blockquote class="border-l-4 border-salmon my-2 pl-4 pr-4 text-gray-600">
      {{ bookmark.excerpt -}}
    </blockquote>
  {% endif %}
  <div class="text-gray-500 font-normal">
    <a href="{{ bookmark.permalink }}">
      <time datetime="{{ bookmark.date | date: "%Y-%m-%d" }}" class="text-gray-500 hover:text-salmon">
        {{ bookmark.date | date: '%Y-%m-%d' }}
      </time>
    </a>
    {% if bookmark.tags.length > 0 %}â€¢{% endif %}
    {% for tag in bookmark.tags %}
      {% unless tag == 'blogPost' %}
        <span class="prefix-hash">{{ tag }}</span>
      {% endunless %}
    {% endfor %}
  </div>
</div>
