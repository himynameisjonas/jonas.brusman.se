<div class="grid-item flex flex-col gap-2 {{ photoWidths | default: 'w-full md:w-1/2' }} pb-6">
  <a
    href="{{ post.url }}"
    class="ar-3x2 group absolute top-0 left-0 h-full w-full bg-gray-500"
  >
    <img
      src="{{ post.data.photos | first }}"
      alt="{{ post.data.title }}"
      eleventy:widths="400,800,1200,2000,3000,4000"
      sizes="(max-width: 640px) calc(100vw - 32px), 436px"
      loading="{% if forloop.index == 1 %}eager{% else %}lazy{% endif %}"
      class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
    >
    <div class="absolute inset-0 flex flex-col justify-center bg-gray-700/15 px-4 text-center transition-colors hover:bg-transparent">
      <h2 class="pb-1 text-3xl/14 font-bold text-balance">
        <span class="bg-neutral-100/65 box-decoration-clone px-2 py-1 pt-2 font-black text-neutral-700 transition-colors group-hover:bg-neutral-100/85 dark:bg-neutral-900/65 dark:text-neutral-300 dark:group-hover:bg-neutral-900/85">
          {{- post.data.title -}}
        </span>
      </h2>
      <time
        datetime="{{ post.date | date: "%Y-%m-%d" }}"
        class="pt-1 font-medium text-gray-100"
      >
        {{ post.date | date: '%Y-%m-%d' }}
      </time>
    </div>
  </a>
  <div class="grid grid-cols-3 gap-2">
    {% for photo in post.data.photos offset: 1 %}
      <a
        href="{{ post.url }}"
        class="ar-3x2 group bg-gray-500"
      >
        <img
          src="{{ photo }}"
          alt="{{ post.data.title }}"
          eleventy:widths="400,800,1200,2000,3000,4000"
          sizes="(min-width: 1700px) 103px, (min-width: 1040px) 140px, (min-width: 780px) calc(1.67vw + 102px), (min-width: 640px) 187px, calc(33.44vw - 16px)"
          class="absolute inset-0 h-full w-full bg-gray-500 object-cover transition-transform duration-700 ease-out group-hover:scale-105"
        >
      </a>
    {% endfor %}
  </div>
</div>
